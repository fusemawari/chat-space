.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
      = link_to new_group_path(current_user), method: :get do
        = fa_icon 'pencil-square-o', class: 'icon1'
      %li.list
      = link_to edit_user_path(current_user), method: :get do
        = fa_icon 'cog', class: 'icon2'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
